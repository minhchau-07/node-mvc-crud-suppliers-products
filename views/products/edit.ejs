<%- include('../partials/header') %>
    <h2>Edit Product</h2>

    <form method="post" action="/products/<%= product._id %>" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input name="name" value="<%= product.name %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Price</label>
            <input name="price" type="number" step="0.01" min="0" value="<%= product.price %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Quantity</label>
            <input name="quantity" type="number" min="0" value="<%= product.quantity %>" class="form-control" required>
        </div>
        <div class="mb-3">
            <label class="form-label">Supplier</label>
            <select name="supplierId" class="form-select" required>
      <% suppliers.forEach(s => { %>
        <option value="<%= s._id %>"
          <%= String(s._id) === String(product.supplierId) ? 'selected' : '' %>>
          <%= s.name %>
        </option>
      <% }) %>
    </select>
        </div>
        <button type="submit" class="btn btn-warning">Update</button>
        <a href="/products" class="btn btn-secondary">Cancel</a>
    </form>

    <%- include('../partials/footer') %>